# SliTaz package receipt.

PACKAGE="cairo-dock-plugins"
VERSION="2.1.0"
CATEGORY="x-window"
SHORT_DESC="Set of plugins for Cairo-Dock."
MAINTAINER="pankso@slitaz.org"
DEPENDS="cairo-dock"
BUILD_DEPENDS="cairo-dock-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.cairo-dock.org/"
WGET_URL="http://launchpad.net/cairo-dock-plug-ins/2.1/$VERSION/+download/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--disable-gnome-integration \
		--disable-old-gnome-integration \
		--enable-network-monitor \
		--disable-tomboy \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share/cairo-dock $fs/usr/share
}
