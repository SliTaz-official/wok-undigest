# SliTaz package receipt.

PACKAGE="vzctl"
VERSION="3.0.23"
CATEGORY="system-tools"
SHORT_DESC="OpenVZ containers control utility"
MAINTAINER="erjo@slitaz.org"
DEPENDS="udev bash procmail bridge-utils logrotate"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.openvz.org"
WGET_URL="http://download.openvz.org/utils/$PACKAGE/$VERSION/src/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	busybox patch -p1 -i ../stuff/vzctl-3.0.23.u || exit false
	./configure \
		--prefix=/usr \
		--localstatedir=/var \
		--enable-bashcomp \
		--enable-logrotate \
		--disable-static && \
	make && make DESTDIR=$PWD/_pkg install && make DESTDIR=$PWD/_pkg install-slitaz
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share \
		-p $fs/etc/conf.d
	 
	cp -a $_pkg/etc $fs/
	cp -a $_pkg/var $fs/
	cp -a $_pkg/vz $fs/
	cp -a $_pkg/usr/sbin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share/vzctl $fs/usr/share
	
	rm -f $fs/usr/lib/*.la
	
	# Fix permission
	chmod 755 $fs/usr/sbin/*
	chmod 755 $fs/etc/init.d/*
	chmod 755 $fs/usr/share/vzctl/scripts/*
	chmod 755 $fs/usr/lib/vzctl/scripts/*
	
	
}

