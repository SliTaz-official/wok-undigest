# SliTaz package receipt.

PACKAGE="deadbeef"
VERSION="0.3.3"
CATEGORY="multimedia"
SHORT_DESC="Simple to use GTK+ audio player."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ alsa-lib libvorbis libsamplerate"
BUILD_DEPENDS="gtk+-dev alsa-lib-dev libvorbis-dev libmad-dev \
libsndfile-dev libsamplerate-dev flac-dev curl-dev ffmpeg-dev"
SUGGESTED="deadbeef-plugins"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://deadbeef.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
TAGS="music audio player mp3 ogg"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/$PACKAGE $fs/usr/share/pixmaps
	cp -a $_pkg/usr/bin $fs/usr
	for l in alsa gtkui hotkeys vorbis
	do
		cp -a $_pkg/usr/lib/$PACKAGE/$l.so* $fs/usr/lib/$PACKAGE
	done
	cp -a $_pkg/usr/share/$PACKAGE $fs/usr/share
	cp -a $_pkg/usr/share/icons/hicolor/32x32/apps/*.png \
		$fs/usr/share/pixmaps
}
