# SliTaz package receipt.

PACKAGE="gnome-keyring"
VERSION="2.28.1"
CATEGORY="x-window"
SHORT_DESC=""
MAINTAINER="erjo@slitaz.org"
DEPENDS="libgcrypt libtasn1 python"
BUILD_DEPENDS="libgcrypt-dev libtasn1-dev python-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.gnome.org"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/$PACKAGE/${VERSION%.*}/$TARBALL"


# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/$PACKAGE \
		--sysconfdir=/etc/gnome \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	
	cp -a $_pkg/etc $fs/
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/gnome-keyring $fs/usr/lib
	
	# remove archive lib
	find $fs/usr/lib -name *.*a -exec rm -f {} \;
	
	test -d $WOK/$PACKAGE-dev && tazwok cook $PACKAGE-dev
		
}

