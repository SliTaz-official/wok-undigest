# SliTaz package receipt.

PACKAGE="gnome-keyring"
VERSION="2.32.1"
CATEGORY="x-window"
SHORT_DESC="A program that keep password and other secrets for users."
MAINTAINER="pankso@slitaz.org"
DEPENDS="libgcrypt libtasn1 python dbus"
BUILD_DEPENDS="libgcrypt-dev libtasn1-dev python-dev dbus-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.gnome.org"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/$PACKAGE/${VERSION%.*}/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--libexecdir=/usr/lib/$PACKAGE \
		--sysconfdir=/etc/gnome \
		--disable-pam &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $_pkg/etc $fs
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/$PACKAGE $fs/usr/lib
	cp -a $_pkg/usr/share $fs/usr/share
	cp -a $_pkg/usr/share/dbus-1 $fs/usr/share
	cp -a $_pkg/usr/share/gcr $fs/usr/share
	rm -rf $fs/usr/lib/gnome-keyring/devel
	strip -s $fs/usr/lib/$PACKAGE/* 2>/dev/null
	# remove archive lib
	find $fs/usr/lib -name *.*a -exec rm -f {} \;	
}

