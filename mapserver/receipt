# SliTaz package receipt.

PACKAGE="mapserver"
VERSION="6.0.1"
CATEGORY="misc"
SHORT_DESC="Open Source platform for publishing spatial data."
MAINTAINER="erjo@slitaz.org"
WEB_SITE="mapserver.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://download.osgeo.org/mapserver/$TARBALL"

DEPENDS="giflib libgd jpeg libpng"
BUILD_DEPENDS="giflib-dev libgd-dev proj-dev postgresql-dev curl-dev geos-dev \
libpng-dev jpeg-dev tiff"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--with-threads \
		--with-proj \
		--with-postgis \
		--with-geos \
	$CONFIGURE_ARGS && make
	
	#~ 
	#~ \
		#~ --with-mapscript \
		#~ --with-gdal \
		#~ --with-ogr \
		#~ --with-wmsclient\
		#~ --with-wfs \
		#~ --with-wfsclient \
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/mapserver
	cp -a $src/mapserv $fs/usr/share/mapserver
}
