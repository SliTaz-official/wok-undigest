# SliTaz package receipt.

PACKAGE="usb-modeswitch"
VERSION="1.2.3"
PACKAGE_DATA="${PACKAGE}-data-20120531"
CATEGORY="network"
MAINTAINER="jozee@slitaz.org"
SHORT_DESC="Activating switchable USB devices on Linux."
WEB_SITE="http://www.draisberghof.de/usb_modeswitch/"
DEPENDS="libusb-compat"
BUILD_DEPENDS="gcc make libusb-compat-dev "
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$WEB_SITE/$TARBALL"
TAGS="3g-modem"


# Rules to configure and make the package.

compile_rules()
{
	cd $src/
	make clean 
	mkdir -p $DESTDIR/etc $DESTDIR/lib/udev/usb_modeswitch $DESTDIR/usr/share/man/man1
	make &&
	make DESTDIR=$DESTDIR install
	
	 # download data
	[ -s $SOURCES_REPOSITORY/$PACKAGE_DATA.tar.bz2 ] ||
		wget -P $SOURCES_REPOSITORY $WEB_SITE/$PACKAGE_DATA.tar.bz2 
	[ -d $PACKAGE_DATA ] ||
		tar -xjf $SOURCES_REPOSITORY/$PACKAGE_DATA.tar.bz2
	  
	# download setup config
	[ -s  $SOURCES_REPOSITORY/usb_modeswitch.setup ] ||
		wget -O $SOURCES_REPOSITORY/usb_modeswitch.setup \
			$WEB_SITE/device_reference.txt
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr \
			$fs/etc/usb_modeswitch.d \
			$fs/lib/udev/rules.d 			
	
	cp -a $_pkg/etc $fs
	cp -a $_pkg/usr/sbin $fs/usr
	cp -a $_pkg/lib/udev/* $fs/lib/udev
	cp -a $src/$PACKAGE_DATA/usb_modeswitch.d/* $fs/etc/usb_modeswitch.d
	cp -a $src/$PACKAGE_DATA/40-usb_modeswitch.rules $fs/lib/udev/rules.d
	cp -a $SOURCES_REPOSITORY/usb_modeswitch.setup $fs/etc/
	chown -R root.root $fs
}
