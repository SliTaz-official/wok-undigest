# SliTaz package receipt.

PACKAGE="sdl_image"
VERSION="1.2.10"
SOURCE="SDL_image"
CATEGORY="multimedia"
MAINTAINER="jozee@slitaz.org"
SHORT_DESC="A simple library to load images of various formats as SDL surfaces"
DEPENDS="sdl libpng libjpeg libtiff zlib"
BUILD_DEPENDS=" libpng-dev  zlib-dev sdl-dev sdl"
WEB_SITE="http://www.libsdl.org/projects/SDL_image/"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/release/$TARBALL"

# Rules to configure and make the package.

compile_rules() {
  cd $src
  ./configure --prefix=/usr &&
  make &&
  make DESTDIR=$PWD/_pkg install
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/lib/*so* $fs/usr/lib/
	
}
