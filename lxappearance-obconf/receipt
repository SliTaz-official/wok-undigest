# SliTaz package receipt.

PACKAGE="lxappearance-obconf"
VERSION="git"
CATEGORY="x-window"
SHORT_DESC="Openbox configuration plugin for LXappearance."
MAINTAINER="gokhlayeh@mailoo.org"
DEPENDS="lxappearance openbox"
BUILD_DEPENDS="openbox-dev xorg-dev libxcb-dev glib-dev libxml2-dev \
libtool git automake autoconf intltool fontconfig-dev gtk+-dev lxappearance \
util-linux-ng-uuid-dev expat-dev"
WEB_SITE="http://lxde.org"

# Rules to configure and make the package.
compile_rules()
{
	git clone git://lxde.git.sourceforge.net/gitroot/lxde/lxappearance-obconf $src
	cd $src
	sed '/no/d' -i po/LINGUAS
	./autogen.sh --prefix=/usr --sysconfdir=/etc
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr
    cp -a $_pkg/usr/* $fs/usr
}
