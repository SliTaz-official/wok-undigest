# SliTaz package receipt.

PACKAGE="poppler-qt4"
VERSION="0.22.0"
CATEGORY="office"
SHORT_DESC="Poppler compiled with Qt4 support too."
MAINTAINER="pankso@slitaz.org"
DEPENDS="expat freetype glib jpeg xorg-libXdamage lcms \
gcc-lib-base cairo libQtCore libQtXml libQtGui tiff bzlib libpng"
BUILD_DEPENDS="expat-dev pkg-config jpeg-dev tiff-dev \
freetype-dev fontconfig-dev glib-dev lcms-dev zlib-dev cairo-dev \
automake bzip2-dev libpng-dev Qt4-dev libQtCore libQtXml libQtGui"
SOURCE="poppler"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://poppler.freedesktop.org/"
WGET_URL="http://poppler.freedesktop.org/$TARBALL"

PROVIDE="poppler"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--enable-poppler-qt4 \
		--enable-zlib \
		--enable-cairo-output \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
