# SliTaz package receipt.

PACKAGE="libbonobo-dev"
VERSION="2.32.0"
CATEGORY="development"
SHORT_DESC="Devel files for libbonobo."
MAINTAINER="pankso@slitaz.org"
DEPENDS="libbonobo"
WEB_SITE="http://www.gnome.org/"
WANTED="libbonobo"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $_pkg/usr/lib/*.a* $fs/usr/lib
	cp -a $_pkg/usr/lib/bonobo* $fs/usr/lib
	cp -a $_pkg/usr/lib/pkgconfig $fs/usr/lib
	cp -a $_pkg/usr/lib/orbit-2.0 $fs/usr/lib
	cp -a $_pkg/usr/share/idl $fs/usr/share
	cp -a $_pkg/usr/include $fs/usr
	# remove archive lib
	find $fs/usr/lib -name *.so* -exec rm -f {} \;
	rm -rf $fs/usr/lib/bonobo/*server*
}
