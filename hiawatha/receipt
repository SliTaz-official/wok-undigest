# SliTaz package receipt.

PACKAGE="hiawatha"
VERSION="7.8.2"
CATEGORY="network"
SHORT_DESC="Advanced and secure webserver."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.hiawatha-webserver.org/"
WGET_URL="${WEB_SITE}files/$TARBALL"
PROVIDE="lighttpd"
CONFIG_FILES="/etc/hiawatha"
TAGS="webserver http server"

DEPENDS="openssl libxml2 libxslt zlib"
BUILD_DEPENDS="openssl-dev libxml2-dev libxslt-dev zlib-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --mandir=/usr/share/man \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-chroot \
		--enable-command \
	$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.   
genpkg_rules()                                      
{
	mkdir -p $fs/usr
	cp -a $_pkg/var $fs
	cp -a $_pkg/etc $fs
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/sbin $fs/usr
}
