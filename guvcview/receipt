# SliTaz package receipt.

PACKAGE="guvcview"
VERSION="1.6.1"
CATEGORY="multimedia"
SHORT_DESC="Gmerlin is a multimedia architecture for linux."
MAINTAINER="devel@slitaz.org"
TARBALL="${PACKAGE}-src-${VERSION}.tar.gz"
WEB_SITE="http://guvcview.sourceforge.net/"
WGET_URL="$SF_MIRROR/project/guvcview/source/$TARBALL"

DEPENDS="gtk+ libsdl"
BUILD_DEPENDS="gtk+-dev libsdl-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		$CONFIGURE_ARGS &&
	make && make install
}

