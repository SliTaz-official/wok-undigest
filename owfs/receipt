# SliTaz package receipt.

PACKAGE="owfs"
VERSION="2.7p33"
CATEGORY="misc"
SHORT_DESC="OWFS One Wire File System."
MAINTAINER="l.lemarinel@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="www.owfs.org"
#WGET_URL="http://downloads.sourceforge.net/project/owfs/owfs/$VERSION/$TARBALL?use_mirror=freefr"
WGET_URL="http://freefr.dl.sourceforge.net/project/owfs/owfs/2.7p33/owfs-2.7p33.tar.gz"
BUILD_DEPENDS="fuse-dev libusb libusb-dev"
DEPENDS="fuse libusb"


# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --bindir=/usr/bin 
	make 
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
}
