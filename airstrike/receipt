# SliTaz package receipt.

PACKAGE="airstrike"
VERSION="pre6a"
CATEGORY="games"
SHORT_DESC="Juego batalla aerea."
MAINTAINER="arca2@hotmail.com"
TARBALL="$PACKAGE-$VERSION-src.tar.gz"
WEB_SITE="http://icculus.org/airstrike/"
WGET_URL="http://offload1.icculus.org:9090/$PACKAGE/$TARBALL"

DEPENDS="libsdl-image libsdl"
BUILD_DEPENDS="libsdl-image-dev libsdl-dev"

# Packaging for SliTaz by Rene Rivero.

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i 's/-lSDL_image/& -lm/' src/Makefile
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp $src/airstrike $fs/usr/bin
	mkdir -p $fs/home/tux
	cp -ar $src/data $fs/home/tux/airstrike-data
	cp $src/airstrikerc $fs/home/tux/.airstrikerc
	sed -i 's|"data\"|"/home/tux/airstrike-data"|' $fs/home/tux/.airstrikerc
	chown -R 1000.100 $fs/home/tux
	mkdir -p $fs/usr/share/applications
	cp $stuff/airstrike.desktop $fs/usr/share/applications
}
