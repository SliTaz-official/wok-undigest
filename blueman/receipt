# SliTaz package receipt.

PACKAGE="blueman"
VERSION="1.10"
CATEGORY="system-tools"
SHORT_DESC="Easy to use GTK+ Bluetooth Manager."
MAINTAINER="pankso@slitaz.org"
DEPENDS="linux-bluetooth bluez python pygtk libnotify notify-python"
BUILD_DEPENDS="bluez-dev python-dev pygtk-dev notify-python"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://blueman-project.org/"
WGET_URL="http://download.tuxfamily.org/blueman/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/$PACKAGE \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/pixmaps
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share/blueman $fs/usr/share
	cp -a $_pkg/usr/share/hal $fs/usr/share
	cp -a $_pkg/usr/share/dbus-1 $fs/usr/share
	cp -a $_pkg/usr/share/PolicyKit $fs/usr/share
	cp -a $_pkg/usr/share/icons/hicolor/32x32/apps/*.png \
		$fs/usr/share/pixmaps
	cp -a $_pkg/etc $fs
}
