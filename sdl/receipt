# SliTaz package receipt.

PACKAGE="sdl"
VERSION="1.2.14"
SOURCE="SDL"
CATEGORY="multimedia"
MAINTAINER="jozee@slitaz.org"
SHORT_DESC="A library for portable low-level access to a video framebuffer, audio output, mouse, and keyboard"
DEPENDS="glibc-base xorg-libXext xorg-libXrender xorg-libX11"
BUILD_DEPENDS="alsa-lib mesa xorg-libXext-dev  xorg-libXrender-dev  xorg-libX11-dev "
WEB_SITE="http://www.libsdl.org"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/release/$TARBALL"


# Rules to configure and make the package.

compile_rules() {
  cd $src
  ./configure --prefix=/usr \
			  --disable-nasm \
			  --enable-alsa \
			  --with-x \
			  --disable-esd \
			  --disable-rpath \
			  $CONFIGURE_ARGS &&
  make &&
  make DESTDIR=$PWD/_pkg install
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*so* $fs/usr/lib/
	
}
