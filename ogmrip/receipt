PACKED_SIZE="500.0k"
UNPACKED_SIZE="4.0M"
PACKAGE="ogmrip"
VERSION="0.13.4"
CATEGORY="devlopement"
SHORT_DESC=" application and libraries for ripping and encoding DVD"
WEB_SITE="http://ogmrip.sourceforge.net/en/index.html"
MAINTAINER="fredericguilbault@live.ca"
DEPENDS="libdvdread"
BUILD_DEPENDS=" glib-dev libgio-dev enca-dev libxml2-dev mplayer mencoder intltool acl libdvdread-dev" 
SOURCE="ogmrip"
TARBALL="$SOURCE-$VERSION.tar.gz"                 
WGET_URL="http://hivelocity.dl.sourceforge.net/project/$SOURCE/$SOURCE/0.13/$VERSION/$TARBALL"            
CONFIG_FILES=" "        

compile_rules() 
	{  
      cd $src
      ./configure --prefix=/usr  $CONFIGURE_ARGS                 
	   make  
   	   make DESTDIR=$PWD/_pkg install     
	}

genpkg_rules()
	{
	  mkdir -p $fs/usr
	
	  cp -a $_pkg/usr/bin $fs/usr
	  cp -a $_pkg/usr/share $fs/usr
	  cp -a $_pkg/usr/include $fs/usr
	  cp -a $_pkg/usr/lib $fs/usr	
	}